<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_home_h"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/form_line_color"
            android:layout_marginBottom="3dp"/>

        <RadioGroup
            android:id="@+id/mRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <RadioButton
                android:id="@+id/bottom_bar_sy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/index_shouye"
                android:gravity="center"
                android:textColor="@drawable/frag__base_selector_color"
                android:textSize="11dp"
                android:text="首页"/>

            <RadioButton
                android:id="@+id/bottom_bar_lskj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/index_lskj"
                android:gravity="center"
                android:textColor="@drawable/frag__base_selector_color"
                android:textSize="11dp"
                android:text="历史开奖"
                />

            <RadioButton
                android:id="@+id/bottom_bar_sjtj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@drawable/index_lhzs"
                android:textColor="@drawable/frag__base_selector_color"
                android:textSize="11dp"
                android:text="龙虎走势"
                />

            <RadioButton
                android:id="@+id/bottom_bar_jbzs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@drawable/index_gyhz"
                android:textColor="@drawable/frag__base_selector_color"
                android:textSize="11dp"
                android:text="冠亚和值"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
