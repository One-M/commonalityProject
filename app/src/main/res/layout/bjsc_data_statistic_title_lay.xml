<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/yg_total_points"
        android:layout_width="@dimen/bjsc_statistic_title2_w"
        android:layout_height="@dimen/bjsc_statistic_title2_h"
        android:background="@drawable/bjsc_statistic_title_bg"
        android:gravity="center"
        android:text="统计项"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yg_total_points_num"
        android:layout_width="@dimen/bjsc_statistic_title2_w"
        android:layout_height="@dimen/bjsc_statistic_title2_h"
        android:gravity="center"
        android:text="出现次数"
        android:background="@drawable/bjsc_statistic_title_bg"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintStart_toEndOf="@+id/yg_total_points"
        app:layout_constraintTop_toTopOf="@+id/yg_total_points" />

    <TextView
        android:id="@+id/yg_total_points_prob"
        android:layout_width="@dimen/bjsc_statistic_title2_w"
        android:layout_height="@dimen/bjsc_statistic_title2_h"
        android:gravity="center"
        android:text="出现概率"
        android:background="@drawable/bjsc_statistic_title_bg"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintStart_toEndOf="@+id/yg_total_points_num"
        app:layout_constraintTop_toTopOf="@+id/yg_total_points" />

    <TextView
        android:id="@+id/yg_theory_probability"
        android:layout_width="0dp"
        android:layout_height="@dimen/bjsc_statistic_title2_h"
        android:gravity="center"
        android:text="理论概率"
        android:background="@drawable/bjsc_statistic_title_bg"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yg_total_points_prob"
        app:layout_constraintTop_toTopOf="@+id/yg_total_points" />
</android.support.constraint.ConstraintLayout>